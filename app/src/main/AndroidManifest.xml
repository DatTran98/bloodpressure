<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hust.bloddpressure">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/blood_pressure_icon_vector"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.AnalysisActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".controllers.MoveToAnotherRoom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.EditUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.AddRoomActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.ListRoomActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.AddNewsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.ListNewsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.ListUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.DetailUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.MenuManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.MenuUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>