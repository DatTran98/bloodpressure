<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailUserFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailUserActivity">
    <TextView
        android:id="@+id/title_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Thông tin chi tiết bệnh nhân"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_basic_detail"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Thông tin cơ bản"/>
        <Button
            android:id="@+id/btn_history_pressure"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_basic_detail"
            android:text="lịch sử kiểm tra"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/content_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_edit_user"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:text="Chỉnh sửa"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btn_delete_user"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/btn_edit_user"
            android:text="Xóa"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </RelativeLayout>




</LinearLayout>